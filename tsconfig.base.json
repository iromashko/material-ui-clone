{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@material-uiclone/material/domain": [
        "libs/material/domain/src/index.ts"
      ],
      "@material-uiclone/material/feature-components": [
        "libs/material/feature-components/src/index.ts"
      ],
      "@material-uiclone/material/feature-directives": [
        "libs/material/feature-directives/src/index.ts"
      ],
      "@material-uiclone/material/feature-other": [
        "libs/material/feature-other/src/index.ts"
      ],
      "@material-uiclone/material/feature-pipes": [
        "libs/material/feature-pipes/src/index.ts"
      ],
      "@material-uiclone/material/feature-services": [
        "libs/material/feature-services/src/index.ts"
      ],
      "@material-uiclone/shared/ui-material": [
        "libs/shared/ui-material/src/index.ts"
      ],
      "@material-uiclone/shared/ui-pipes": ["libs/shared/ui-pipes/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
